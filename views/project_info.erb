<h3>You are viewing the project:</h3>
<h2><%= @project.title %></h2>

<p><a href="/projects/<%= @project.id %>/edit">Edit Project</a></p><br><br>

<h3>Add a volunteer to this project:</h3>
  <form action="/projects/<%= @project.id %>/volunteers" method="post">
    <div class="form-group">
      <label for="name" class="form-label">Volunteer's name:</label>
      <input type="text" name="name" class="form-control" id="name" placeholder="Sam Smithers" autofocus><br>
      <button type="submit" class="button btn">Add Volunteer</button>
    </div>
  </form>

<% if @project.volunteers.any? %>
  <h3>This project's current volunteers are:</h3>

  <ul>
    <% @project.volunteers.each do |volunteer| %>
      <li><a href="/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a></li>
    <% end %>
  </ul>

<% else %>

  <p>There are currently no volunteers for this project.</p>

<% end %>

<p><a href="/">Return to Main Page</a></p>
