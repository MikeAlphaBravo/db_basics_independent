<h1>Volunteer Tracker</h1>

<h3>Add a new project:</h3>
  <form action="/projects" method="post">
    <div class="form-group">
      <label for="title" class="form-label">Title your project:</label>
      <input type="text" name="title" class="form-control" id="title" placeholder="Title of Project" autofocus><br>
      <button type="submit">Create Project</button>
    </div>
  </form>

<% if @projects.any?() %>
  <h3>Your current projects are:</h3>
  <ul>
    <% @projects.each() do |project| %>
      <li><a href="/projects/<%= project.id() %>"><%= project.title() %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>You have no current projects, add one above.</p>
<% end %>
